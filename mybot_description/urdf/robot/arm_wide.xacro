	</xacro:macro>
	<xacro:leg name="left_front" name2="right_front" reflect_front="1" reflect_side="1" wheel_origin_angle="0 1.5707 -0.785398" join_rotation_axis="-1 1 0" join_rotation_axis2="1 1 0"/>
	<!--xacro:leg name="right_front" reflect_front="1" reflect_side="-1" wheel_origin_angle="0 1.5707 0.785398" join_rotation_axis="1 1 0" /-->
	<xacro:leg name="left_back" name2="right_back" reflect_front="-1" reflect_side="1" wheel_origin_angle="0 1.5707 0.785398" join_rotation_axis="1 1 0" join_rotation_axis2="-1 1 0" />
	<!--xacro:leg name="right_back" reflect_front="-1" reflect_side="-1" wheel_origin_angle="0 1.5707 -0.785398" join_rotation_axis2="-1 1 0" /-->

</robot>
