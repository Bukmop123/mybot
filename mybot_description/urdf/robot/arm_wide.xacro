<?xml version='1.0'?>

<robot name="mybot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="leg" params="name name2 reflect_front reflect_side wheel_origin_angle join_rotation_axis join_rotation_axis2 " >
	
	<xacro:property name="leg_dimensions" value=".4 .05 .01"/>
	<!-- pie -->
	<xacro:property name="joint_origin_X" value="0.4"/>
	<xacro:property name="joint_origin_Y" value="0.0"/>
	<xacro:property name="joint_origin_Z" value="0"/>
	<xacro:property name="offset_meccanum_X" value="0.03"/>
	<xacro:property name="offset_meccanum_Y" value="0.0"/>
	<xacro:property name="offset_meccanum_Z" value="0.03"/>
	<xacro:property name="leg_dimension_X" value="0.4"/>
	<xacro:property name="leg_dimension_Y" value="0.2"/>
	<xacro:property name="leg_dimension_Z" value="0.01"/>
	<xacro:property name="wheel_track_radius" value="0.05"/>
	<xacro:property name="wheel_track_length" value="0.05"/>
	<link name="${name}_leg">
	<visual>
		<origin xyz="${(reflect_front*leg_dimension_X)/2} 0 0" rpy="0 0 0"/>
		<geometry>
			 <box size="${leg_dimension_X} ${leg_dimension_Y} ${leg_dimension_Z}"/>
		</geometry>
		<material name="white"/>
	</visual>
	<collision>
		<origin xyz="${(reflect_front*leg_dimension_X)/2} 0 0" rpy="0 0 0"/>
		<geometry>
			<box size="${leg_dimension_X} ${leg_dimension_Y} ${leg_dimension_Z}"/>
		</geometry>
	</collision>
	<inertial>
		<origin xyz="${(reflect_front*leg_dimension_X)/2} 0 0" rpy="0 0 0"/>
		<mass value="5" />
		<inertia ixx="0.1" ixy="0.0" ixz="0.0"
			 iyy="0.1" iyz="0.0" izz="0.1" />
	</inertial>
	</link>
        <joint name="base_to_${name}_leg" type="continuous">
            <parent link="chassis"/>
            <child link="${name}_leg"/>
	    <origin xyz="${reflect_front*joint_origin_X} ${reflect_side*joint_origin_Y} ${joint_origin_Z}" rpy="0 0 0"/>
	    <axis xyz="0 1 0" />
	    <limit effort="100" velocity="100"/>
	    <joint_properties damping="0.0" friction="0.0"/>
        </joint>
	<!--xacro:chasis_wheel name="${name}" wheel_origin_angle="${wheel_origin_angle}">
		<cylinder radius="${wheel_radius}" length="${wheel_length}"/>
	</xacro:chasis_wheel-->
	<xacro:sphere_wheel name="${name}">
	</xacro:sphere_wheel>
        <joint name="wheel_to_${name}_leg" type="continuous">
            <parent link="${name}_leg"/>
            <child link="${name}_wheel"/>
	    <origin xyz="${reflect_front*(joint_origin_X+offset_meccanum_X)} ${reflect_side*leg_dimension_Y/2} ${offset_meccanum_X}" rpy="0 0 0"/>
	    <axis xyz="${join_rotation_axis}" />
	    <limit effort="100" velocity="100"/>
	    <joint_properties damping="0.0" friction="0.0"/>
        </joint>
    <transmission name="${name}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="base_to_${name}_leg">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name}Motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>
    <transmission name="${name}_trans_leg">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="wheel_to_${name}_leg">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name}Motor_leg">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>


	<xacro:chasis_wheel name="${name}_track" wheel_origin_angle="0 1.5707 1.5707">
		<cylinder radius="${wheel_track_radius}" length="${wheel_track_length}"/>
	</xacro:chasis_wheel>

	<joint type="continuous" name="${name}_track_joint">
	<origin xyz="${reflect_front*joint_origin_X+reflect_front*(-wheel_track_radius-0.00)} ${reflect_side*leg_dimension_Y/2+wheel_track_length} 0" rpy="0 0 0"/>
	<child link="${name}_track_wheel"/>
	<parent link="${name}_leg"/>
	<axis xyz="0 1 0" rpy="0 0 0"/>
	<limit effort="100" velocity="100"/>
	<joint_properties damping="0.0" friction="0.0"/>
	</joint>

    <transmission name="${name}_track_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${name}_track_joint">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name}_track_Motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>

<xacro:sphere_wheel name="${name2}">
	</xacro:sphere_wheel>
<joint name="wheel_to_${name2}_leg" type="continuous">
            <parent link="${name}_leg"/>
            <child link="${name2}_wheel"/>
	    <origin xyz="${reflect_front*(joint_origin_X+offset_meccanum_X)} ${-reflect_side*leg_dimension_Y/2} ${offset_meccanum_X}" rpy="0 0 0"/>          
	    <axis xyz="${join_rotation_axis2}" />
	    <limit effort="100" velocity="100"/>
	    <joint_properties damping="0.0" friction="0.0"/>
        </joint>
    <transmission name="${name2}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="base_to_${name}_leg">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name2}Motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>
    <transmission name="${name2}_trans_leg">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="wheel_to_${name2}_leg">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name2}Motor_leg">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>

	<xacro:chasis_wheel name="${name2}_track" wheel_origin_angle="0 1.5707 1.5707">
		<cylinder radius="${wheel_track_radius}" length="${wheel_track_length}"/>
	</xacro:chasis_wheel>

	<joint type="continuous" name="${name2}_track_joint">
	<origin xyz="${reflect_front*joint_origin_X+reflect_front*(-wheel_track_radius-0.00)} ${-reflect_side*leg_dimension_Y/2-wheel_track_length} 0" rpy="0 0 0"/>
	<child link="${name2}_track_wheel"/>
	<parent link="${name}_leg"/>
	<axis xyz="0 1 0" rpy="0 0 0"/>
	<limit effort="100" velocity="100"/>
	<joint_properties damping="0.0" friction="0.0"/>
	</joint>

    <transmission name="${name2}_track_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${name2}_track_joint">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name2}_track_Motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>



